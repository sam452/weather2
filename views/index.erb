
<table class="table table-bordered">

  <thead>
    <tr>
      <th>Created</th>
      <th>Temperature</th>
      <th>Humidity</th>
      <th>Rain total</th>
      <th>Wind direction</th>
      <th>Wind speed</th>
    </tr>
  </thead>
  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record[:timestamp].strftime('%m/%d/%y %I:%M:%S %p') %></td>
        <td><%= to_fahrenheit(record[:outsidetemperature]) %></td>
        <td><%= record[:outsidehumidity] %></td>
        <td><%= record[:totalrain] %></td>
        <td><%= record[:currentwinddirection] %></td>
        <td><%= record[:currentwindspeed] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
